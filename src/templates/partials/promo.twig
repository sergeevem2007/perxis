<section class="promo pt-7 pb-8">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h2 class="fw-700 fs-36 text-center mb-5">Акции и предложения</h2>
				<div class="swiper promo__slider mb-44 py-4 px-3">
					<div class="swiper-wrapper">
						{% for item in site.promoSlider %}
						<div class="swiper-slide">
							<a href="{{ item.url }}" class="promo__slide">
								<img src="{{ item.img }}" alt="{{ item.title }}" class="img-fluid promo__img">
								<div class="px-4 pt-3 pb-4 promo__body">
									<h3 class="fw-700 fs-20 mb-3">{{ item.title }}</h3>
									<p class="mb-4">{{ item.description }}</p>
									<span class="d-inline-flex align-items-center position-relative bootom-0">
										Узнать больше
										<svg class="ms-3" width="18" height="18">
											<use xlink:href="#ico-arrow"></use>
										</svg>
									</span>
								</div>
							</a>
						</div>
						{% endfor %}
					</div>
					<div class="swiper-pagination"></div>
				</div>
				<div class="d-flex justify-content-center">
					<button type="button" class="btn btn-outline-dark border-2 rounded-3 fw-700 fs-12 text-uppercase letter-spacing lh-sm py-25 px-4">другие акции
						<svg class="ms-3" width="18" height="18">
							<use xlink:href="#ico-arrow"></use>
						</svg>
					</button>
				</div>
			</div>
		</div>
	</div>
</section>
